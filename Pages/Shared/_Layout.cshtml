<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Power BI Explorer</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
</head>
<body>
    <div class="layout">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="logo">
                <div class="logo-icon">
                    <i class="fas fa-chart-bar"></i>
                </div>
                <div>
                    <h1>Power BI Explorer</h1>
                    <span>API Testing Tool</span>
                </div>
            </div>

            <nav>
                <div class="nav-section">
                    <div class="nav-section-title">Podstawowe</div>
                    <div class="nav-item active" data-section="dashboard">
                        <i class="fas fa-home"></i>
                        <span>Dashboard</span>
                    </div>
                    <div class="nav-item" data-section="config">
                        <i class="fas fa-cog"></i>
                        <span>Konfiguracja</span>
                    </div>
                    <div class="nav-item" data-section="token">
                        <i class="fas fa-key"></i>
                        <span>Token</span>
                    </div>
                </div>

                <div class="nav-section">
                    <div class="nav-section-title">Zasoby</div>
                    <div class="nav-item" data-section="workspaces">
                        <i class="fas fa-folder"></i>
                        <span>Workspaces</span>
                    </div>
                    <div class="nav-item" data-section="reports">
                        <i class="fas fa-file-alt"></i>
                        <span>Raporty</span>
                    </div>
                    <div class="nav-item" data-section="datasets">
                        <i class="fas fa-database"></i>
                        <span>Datasets</span>
                    </div>
                    <div class="nav-item" data-section="dashboards">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Dashboards</span>
                    </div>
                </div>

                <div class="nav-section">
                    <div class="nav-section-title">Zaawansowane</div>
                    <div class="nav-item" data-section="embed">
                        <i class="fas fa-code"></i>
                        <span>Embed</span>
                    </div>
                    <div class="nav-item" data-section="capacities">
                        <i class="fas fa-server"></i>
                        <span>Capacities</span>
                    </div>
                    <div class="nav-item" data-section="gateways">
                        <i class="fas fa-network-wired"></i>
                        <span>Gateways</span>
                    </div>
                    <div class="nav-item" data-section="api-tester">
                        <i class="fas fa-terminal"></i>
                        <span>API Tester</span>
                    </div>
                </div>
            </nav>

            <div style="margin-top: auto; padding-top: 1rem; border-top: 1px solid var(--border-color);">
                <div class="connection-status" id="connectionStatus">
                    <div class="connection-dot disconnected"></div>
                    <span>Nie połączono</span>
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            @RenderBody()
        </main>
    </div>

    <div class="toast-container" id="toastContainer"></div>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
